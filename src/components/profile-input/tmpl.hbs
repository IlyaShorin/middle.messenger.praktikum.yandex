<div class="{{styles.inputBox}}">
    <label for='{{name}}' class='{{styles.label}}'>{{label}}</label>
    <input
      name={{name}}
      class='{{styles.input}}'
      placeholder='{{placeholder}}'
      id='{{name}}'
      value="{{value}}"
      {{#if type}}type="{{type}}"{{/if}}
      {{#if disabled}} disabled {{/if}}
      autocomplete="off"
    />
  </div class="{{styles.inputBox}}">